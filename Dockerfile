# ===================================== Build Step
FROM node:10-alpine as build-step

RUN mkdir -p /app

WORKDIR /app

COPY package.json /app

RUN npm install

COPY . /app

RUN npm run build --prod


# ===================================== Copy to Webserver

FROM nginx

COPY --from=build-step /app/dist/hskaFlix /usr/share/nginx/html
